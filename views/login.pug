extends base.pug



block append stylesheets
    link(rel="stylesheet" href="/static/css/login.css")/


block append scripts
    script(defer type="text/javascript" src="/static/js/login.js")


block body 
    header
        div(class="container-fluid")
            .row
                div(class="login col-12 d-flex justify-content-center align-items-center")
                    div(class="col-11 p-4 right rounded-2 d-flex flex-column")
                        div(class="form-group mb-4")
                            h1 Login

                        div(class="form-group mb-3 mb-sm-4")
                            label(class="mb-1" for="username" class="label") USERNAME
                            input(class="form-control p-2 p-sm-3" type="text" id="username" placeholder="Username")/

                        div(class="form-group mb-3 mb-sm-4")
                            label(class="mb-1" for="password" class="label") PASSWORD
                            input(class="form-control p-2 p-sm-3" type="password" id="password" placeholder="Password")/

                        div(class="form-group d-flex align-items-center justify-content-between mb-2 mb-sm-3")
                            div(class="form-check col d-flex-align-items-start justify-content-center")
                                input(class="form-check-input" type="checkbox" id="password" placeholder="Password")/
                                label(class="form-check-label") Remember me
                            div(class="col d-flex align-items-center justify-content-end")
                                a(href="#") Forgot password

                        div(class="form-group mt-3 mt-sm-0")
                            button(class="btn btn-primary p-2 p-sm-3 w-100" id="login-btn") Login

                        div(class="form-group mt-3 mt-sm-4 text-center")
                            span Don't have an account? 
                            a(href="/register") Sign Up



